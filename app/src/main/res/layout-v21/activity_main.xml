<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:id="@+id/sceneRoot"
    tools:context="com.glaserproject.ondra.motivator.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_onoff"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        android:id="@+id/cardOnOff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Get notifications"
            style="@style/CardOnOffText"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/mainSwitch"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/cardOnOff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="3dp"
        android:id="@+id/cardAlarm"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardAlarmLayoutDefault">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Send notification after Alarm"
            android:gravity="center"
            android:paddingStart="16dp"
            android:textSize="15sp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/alarmSwitch"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardAlarmLayoutSettings">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="You will receive notification with your motivation quote 15 seconds after your alarm rings"/>
        </LinearLayout>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/ic_arrow_down"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|end"
            android:id="@+id/alarmMore"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/cardAlarm"
        android:id="@+id/cardPicture"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardPictureLayoutDefault"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Text"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pictureSwitch"
                />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Picture"
                android:gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardPictureLayoutSettings">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="This isn't supported yet... sorry..."
                />
        </LinearLayout>
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/ic_arrow_down"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|end"
            android:id="@+id/pictureMore"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/cardPicture"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="3dp"
        android:id="@+id/cardRandom"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardRandomLayoutDefault"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Send notification at random time"
            android:gravity="center"
            android:paddingStart="16dp"
            android:textSize="15sp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/randomSwitch"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardRandomLayoutSettings">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="You will receive notification in random intevals every 3 to 5 hours"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/ic_arrow_down"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|end"
            android:id="@+id/randomMore"
            />
    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        app:fabSize="normal"
        app:elevation="8dp"
        android:src="@drawable/ic_loyalty_black_24dp"
        app:pressedTranslationZ="12dp"
        android:id="@+id/fab"

        />
</RelativeLayout>
