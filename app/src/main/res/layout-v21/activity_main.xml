<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glaserproject.ondra.motivator.MainActivity"
    android:animateLayoutChanges="true"
    android:id="@+id/sceneRoot"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.glaserproject.ondra.motivator.MainActivity">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_onoff"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        android:id="@+id/cardOnOff"
        android:transitionName="mainBar"
        app:layout_scrollFlags="scroll|enterAlways"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Get notifications"
            android:id="@+id/GetNotifText"
            style="@style/CardOnOffText"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/mainSwitch"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/cardOnOff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="3dp"
        android:id="@+id/cardAlarm"
        android:transitionName="AlarmCard"
        >
        <include layout="@layout/main_alarm_card" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/cardAlarm"
        android:id="@+id/cardPicture"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="3dp"

        >
        <include layout="@layout/main_picture_card" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/cardPicture"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="500dp"
        android:layout_marginBottom="200dp"
        app:cardElevation="3dp"
        android:id="@+id/cardRandom"
        >
            <include layout="@layout/main_random_card" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        app:fabSize="normal"
        app:elevation="8dp"
        android:src="@drawable/fab_m"
        app:pressedTranslationZ="12dp"
        android:id="@+id/fab"

        />
</RelativeLayout>
