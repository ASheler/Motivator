<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.glaserproject.ondra.motivator.AlarmSettingsActivity"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"

        app:cardElevation="10dp"
        android:id="@+id/cardAlarm"
        android:transitionName="AlarmCard"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/alarmSettingsTab"
            android:id="@+id/cardAlarmLayoutDefault">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Send notification after Alarm"
                android:gravity="center"
                android:paddingStart="16dp"
                android:textSize="15sp"
                android:transitionName="AlarmText"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:id="@+id/alarmSwitch"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:transitionName="AlarmSwitch"
                />
        </FrameLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeText"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:layout_below="@id/cardAlarm"
        android:gravity="center"
        android:text="Time after alarm, when to get notification:"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorCardSelected"
        android:layout_below="@id/timeText"
        android:layout_alignParentStart="true"
        android:elevation="4dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="20s"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:id="@+id/after20s"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="30s"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/after30s"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="1m"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/after1m"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="2m"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/after2m"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="5m"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/after5m"
            />


    </LinearLayout>
</RelativeLayout>
