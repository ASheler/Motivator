<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glaserproject.ondra.motivator.PictureSettingsActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="10dp"
        android:id="@+id/cardRandom"
        android:transitionName="PictureCard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/cardAlarmLayoutDefault">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="@string/text"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:transitionName="PictureText"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/pictureSwitch"
                    android:transitionName="PictureSwitch"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/picture"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:transitionName="PictureText2"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pictureTextSettings"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:layout_below="@id/cardRandom"
        android:gravity="center"
        android:text="@string/pictureTextSettings"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intervalLayout"
        android:gravity="center"
        android:background="@color/colorSettingsDefault"
        android:layout_below="@id/pictureTextSettings"
        android:layout_alignParentStart="true"
        android:elevation="4dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="1h"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/past1h"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="24h"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/past24h"
            android:background="@color/colorAccent"
            />
    </LinearLayout>
</RelativeLayout>
