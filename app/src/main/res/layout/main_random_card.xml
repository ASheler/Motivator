<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardRandomLayoutDefault"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Send notification at random time"
            android:gravity="center"
            android:paddingStart="16dp"
            android:textSize="15sp"
            android:id="@+id/randomText"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/randomSwitch"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardRandomLayoutSettings">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You will receive notification in random intevals every 3 to 5 hours"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/randomSettingsTab"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/randomMoreLayout">
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/ic_info"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|start"
                android:id="@+id/randomMore"
                android:alpha="0.5"
                />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/randomSettingsClickable"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="settings"
                android:layout_alignTop="@+id/randomSettings"
                android:layout_toStartOf="@+id/randomSettings" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/randomSettingsButton"
                android:layout_height="wrap_content"
                ></FrameLayout>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_gravity="end"
                android:background="@drawable/ic_arrow_right"
                android:id="@+id/randomSettings"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="1dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.5"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>